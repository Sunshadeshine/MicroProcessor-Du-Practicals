3. Write a program for 32-bit BCD addition and subtraction 
BCD ADDITION
  
.model small
.stack
.386
.data

ad dd ?
msg0 db 13,10,"Enter BCD numbers: $"
msg db 13,10,"Enter the 1st 32 Bit number: $"
msg1 db 13,10,"Enter the 1st 32 Bit number: $"
msg2 db 13,10,"Sum: $"


.code
.startup

;;input of 32 bit no.

mov dx,offset msg0
mov ah,09
int 21h

mov dx,offset msg
mov ah,09
int 21h

mov ebx,0
mov cx,4
abc: shl ebx,8

;1st DIGIT OF FIRST NO.

mov ah,01
int 21h

and al,00fh
shl al,4
mov bl,al

;2nd  DIGIT OF FIRST NO.

mov ah,01
int 21h

and al,00fh
add bl,al


loop abc

mov dx,offset msg1
mov ah,09
int 21h

mov edx,ebx

;;input of  second 32 bit no.


mov ebx,0
mov cx,4
abc1: shl ebx,8

;1st DIGIT OF FIRST NO.

mov ah,01
int 21h

and al,00fh
shl al,4
mov bl,al

;2nd  DIGIT OF FIRST NO.

mov ah,01
int 21h

and al,00fh
add bl,al

loop abc1


mov al,bl

add al,dl

daa

mov cl,al

mov al,bh

adc al,dh

daa

mov ch,al

rol ecx,16

rol edx,16

rol ebx,16

mov eax,0

mov al,bl

add al,dl

daa

mov cl,al

mov al,bh

adc al,dh

daa

mov ch,al

rol ecx,16

mov ad,ecx

mov ecx,0


;; printing

mov dx,offset msg2
mov ah,09
int 21h


mov ebx,ad

mov cx,4

abc3 :rol ebx,8

mov al,bl
and al,0f0h
shr al,4
add al,30h

cmp al,39h

jbe ab5

add al,07h

ab5:
mov dl,al
mov ah,02
int 21h


mov al,bl
and al,00fh
add al,30h

cmp al,39h

jbe ab6

add al,07h

ab6:

mov dl,al
mov ah,02
int 21h

loop abc3

.exit
end
